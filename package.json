{
    "name": "api-land",
    "version": "0.0.1",
    "description": "An API routing server for all the stuff I like!",
    "main": "dist/app.js",
    "typings": "dist/app.d.ts",
    "scripts": {
        "start:dev": "nodemon -r dotenv/config ./src/app.ts",
        "lint": "eslint --ignore-path .eslintignore --ext .ts,.js .",
        "lint:fix": "eslint --ignore-path .eslintignore --ext .ts,.js --fix .",
        "test": "jest",
        "prebuild": "rm -rf dist",
        "build": "tsc",
        "prepublishOnly": "npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json}": [
            "prettier --write"
        ],
        "*.{ts,js}": [
            "eslint"
        ]
    },
    "files": [
        "dist/*"
    ],
    "dependencies": {
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "express-winston": "^4.2.0",
        "http-graceful-shutdown": "^3.1.7",
        "module-alias": "^2.2.2",
        "pg": "^8.7.3",
        "typeorm": "^0.3.6",
        "winston": "^3.7.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/jest": "^25.2.1",
        "@types/lodash": "^4.14.178",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^13.9.5",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "eslint": "^6.7.2",
        "eslint-config-airbnb-typescript": "^6.0.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^23.1.1",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.5",
        "jest": "^25.2.4",
        "jest-extended": "^0.11.5",
        "lint-staged": "^10.1.6",
        "nodemon": "^2.0.15",
        "prettier": "^1.18.2",
        "split2": "^3.1.1",
        "ts-jest": "^25.3.0",
        "ts-node": "^10.7.0",
        "typescript": "^3.8.3"
    }
}
