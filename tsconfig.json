{
    "compilerOptions": {
        "lib": ["es6"],
        "types": ["node", "express"],
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "declaration": true,
        "outDir": "./dist/",
        "baseUrl": ".",
        "rootDir": "./src/",
        "paths": {
            "*": ["node_modules/*", "vendor/*"],
            "src/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": ["node_modules/@types", "src/domain"]
    },
    "exclude": ["clients", "node_modules", "coverage", "tests/*", "**/*.test.ts", "jest*"]
}
